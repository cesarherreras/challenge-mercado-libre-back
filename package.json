{
    "name": "js",
    "version": "1.0.0",
    "description": "challenge mercado libre",
    "main": "index.js",
    "scripts": {
        "tsc": "tsc",
        "build": "tsc",
        "start": "npm run build && nodemon ./build/app.js",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "lint:fix": "npm run lint -- --fix",
        "test:file": "export $(cat test/.env-test | xargs) && mocha --timeout 10000 --require ts-node/register",
        "test:only": "npm run test:file -- 'test/**/*.spec.ts'",
        "test": "npm run test:only",
        "coverage": "export $(cat test/.env-test | xargs) && nyc _mocha --timeout 10000 --require ts-node/register 'test/**/*.spec.ts'",
        "coverage:report": "nyc report --reporter=lcov --reporter=text --all",
        "coverage:web": "export DEBUG=bdb:* && npm run coverage && http-server coverage/"
    },
    "author": "Tatiana Albarracin",
    "license": "ISC",
    "dependencies": {
        "@types/express": "^4.17.11",
        "express": "^4.17.1",
        "mocha": "^8.3.2",
        "mysql": "^2.18.1",
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/mocha": "^8.2.2",
        "@types/mysql": "^2.15.18",
        "@types/node-fetch": "^2.5.10",
        "@types/sinon": "^9.0.11",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "sinon": "^10.0.0",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "typescript": "^4.2.4"
    }
}